<form action="@Url.Action("OpenId", "Auth")" method="post" id="openid_form">
<input type="hidden" name="action" value="verify" />
<fieldset>
    <legend>Sign-in or Create New Account</legend>
    
    @Html.ValidationSummary()

    <div id="primary_buttons">
        <a href="@Url.Content("~/auth/facebook")" alt="facebook"><img alt="facebook" src="@Url.Content("~/img/auth/facebook_64.png")" /></a>
        <a href="@Url.Content("~/auth/twitter")" alt="twitter"><img alt="twitter" src="@Url.Content("~/img/auth/twitter_64.png")" /></a>
        <a href="@Url.Content("~/auth/yahoo")" alt="yahoo"><img alt="yahoo" src="@Url.Content("~/img/auth/yahoo_64.png")" /></a>
        <a href="@Url.Content("~/auth/google")" alt="google"><img alt="google" src="@Url.Content("~/img/auth/google_apps_64.png")" /></a>
        <a class="oid aol" data-url="http://openid.aol.com/{username}/" data-label="Enter your AOL screenname." alt="aol" href="#"><img alt="aol" src="@Url.Content("~/img/auth/aol_64.png")" /></a>
        <a class="oid openid" data-url="" data-label="Enter your OpenID." alt="openid" href="#"><img alt="aol" src="@Url.Content("~/img/auth/open_id_64.png")" /></a>
    </div>
    <div id="secondary_buttons">
         <a class="oid flickr" data-url="http://flickr.com/{username}/" data-label="Enter your Flickr username." alt="flickr" href="#"><img alt="flickr" src="@Url.Content("~/img/auth/flickr_32.png")" /></a>
         <a class="oid Technorati" data-url="http://technorati.com/people/technorati/{username}/" data-label="Enter your Technorati username." alt="oid" href="#"><img alt="" src="@Url.Content("~/img/auth/technorati_32.png")" /></a>
         <a class="oid Wordpress" data-url="http://{username}.wordpress.com/" data-label="Enter your Wordpress.com username." alt="oid" href="#"><img alt="" src="@Url.Content("~/img/auth/wordpress_32.png")" /></a>
         <a class="oid Blogger" data-url="http://{username}.blogspot.com/" data-label="http://{username}.blogspot.com/" alt="oid" href="#"><img alt="" src="@Url.Content("~/img/auth/blogger_32.png")" /></a>
    </div>
    
    <div id="openid_input_area">

    </div>
           <input type="hidden" id="openid_identifier" name="openid_identifier" />
    <noscript>
        <p>
            OpenID is service that allows you to log-on to many different websites using a single
            indentity. Find out <a href="http://openid.net/what/">more about OpenID</a> and
            <a href="http://openid.net/get/">how to get an OpenID enabled account</a>.</p>
    </noscript>
</fieldset>
</form>
